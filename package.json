{
  "name": "app",
  "private": true,
  "devDependencies": {
    "esbuild": "^0.27.2",
    "sass": "^1.80.0"
  },
  "scripts": {
    "build": "npx esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "npm run copy:fonts && npx sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:watch": "npm run copy:fonts && npx sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --watch",
    "copy:fonts": "cp app/assets/fonts/*.woff2 app/assets/builds/ 2>/dev/null || true"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.23"
  }
}
