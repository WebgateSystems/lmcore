      p= t('privacy.intro_text')

      h2= t('privacy.admin_title')
      p= t('privacy.admin_intro')
      ul.legal-list-simple
        li
          strong= t('privacy.admin_company')
          |  Webgate Systems LTD
        li
          strong= t('privacy.admin_address')
          |  340 West Derby Road, Liverpool, England, L13 7HG
        li
          strong= t('privacy.admin_email')
          |  
          a href="mailto:office@webgate.pro" office@webgate.pro

      h2= t('privacy.data_scope_title')
